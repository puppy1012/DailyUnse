{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "src",
        "paths": {
          "@/*": ["*"],     // 일반적인 절대경로 alias
          "*": ["./@mf-types/*"],
          "@assets/*": ["assets/*"]

        },
      },
      "include": ["src",  "src/types"],
      "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
    }
